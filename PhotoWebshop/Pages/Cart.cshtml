@page
@model PhotoWebshop.Pages.CartModel
@{

    <link rel="stylesheet" type="text/css" runat="server" href="~/css/cart.css" />

    if (Model.GetProduct() == null)
    {
        <h1>This product does not exist!</h1>
    }

    else
    {
        <div class="container">
            <div class="row">
                <div class="col-5">
                    <h3>@Model.GetProduct().Title</h3>
                    <h3>€@Model.GetProduct().Price</h3>
                    <img class="product-thumbnail" style="max-width: 100%" src="~/images/@Model.GetProduct().ImageName" />
                </div>

                <div class="col-6">

                    <form action="../Order" method="post">

                        <input type="hidden" name="productTitle" value="@Model.GetProduct().Title" />


                        <div class="row mt-3 mx-4">
                            <div class="col-12">
                                <label class="order-form-label">Email</label>
                            </div>
                            <div class="col-12">
                                <input class="order-form-input" placeholder="Email" name="email">
                            </div>
                        </div>

                        <h4>Factuuradres</h4>

                        <div class="row mx-4">
                            <div class="col-12 mb-2">
                                <label class="order-form-label">Name</label>
                            </div>
                            <div class="col-12 col-sm-6">
                                <input class="order-form-input" placeholder="Voornaam" name="firstNamePayment">
                            </div>
                            <div class="col-12 col-sm-6 mt-2 mt-sm-0">
                                <input class="order-form-input" placeholder="Achternaam" name="lastNamePayment">
                            </div>
                        </div>

                        <div class="row mt-3 mx-4">
                            <div class="col-12">
                                <label class="order-form-label">Adress</label>
                            </div>
                            <div class="col-12">
                                <input class="order-form-input" placeholder="Straat" name="streetPayment">
                            </div>
                            <div class="col-12 col-sm-6 mt-2 pr-sm-2">
                                <input class="order-form-input" placeholder="Stad" name="cityPayment">
                            </div>
                            <div class="col-12 col-sm-6 mt-2 pl-sm-0">
                                <input class="order-form-input" placeholder="Provincie" name="provincePayment">
                            </div>
                            <div class="col-12 col-sm-6 mt-2 pr-sm-2">
                                <input class="order-form-input" placeholder="Postcode" name="postalCodePayment">
                            </div>
                        </div>

                        <h4>Verzendadres</h4>

                        <div class="row mx-4">
                            <div class="col-12 mb-2">
                                <label class="order-form-label">Name</label>
                            </div>
                            <div class="col-12 col-sm-6">
                                <input class="order-form-input" placeholder="Voornaam" name="firstNameSend">
                            </div>
                            <div class="col-12 col-sm-6 mt-2 mt-sm-0">
                                <input class="order-form-input" placeholder="Achternaam" name="lastNameSend">
                            </div>
                        </div>

                        <div class="row mt-3 mx-4">
                            <div class="col-12">
                                <label class="order-form-label">Adress</label>
                            </div>
                            <div class="col-12">
                                <input class="order-form-input" placeholder="Straat" name="streetSend">
                            </div>
                            <div class="col-12 col-sm-6 mt-2 pr-sm-2">
                                <input class="order-form-input" placeholder="Stad" name="citySend">
                            </div>
                            <div class="col-12 col-sm-6 mt-2 pl-sm-0">
                                <input class="order-form-input" placeholder="Provincie" name="provinceSend">
                            </div>
                            <div class="col-12 col-sm-6 mt-2 pr-sm-2">
                                <input class="order-form-input" placeholder="Postcode" name="postalCodeSend">
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-12">
                                <button type="submit" id="btnSubmit" class="btn btn-dark d-block mx-auto btn-submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }

}
